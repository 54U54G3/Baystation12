{{:helper.OMEGAMode()}}
<style>
	* {opacity: 0.99;}
	.block{
		display: block;

		padding: 10px;
		margin: 10px;

		width: 45%;

		border: 2px solid #125;
		border-radius: 8px;

		white-space: pre-line;
		text-align: center;
	}
	.small_size{
		width: 10%;
	}
	.omegamat_link{
		color: #aaf;
		background: #2d91a6;
		transition: background 0.3s ease-in-out;
	}
	.omegamat_link:hover{background: #2da196;}
	.code_error_msg{
		display: inline-block;
		color: #0f0;
		background: #a00;

		padding: 20px;
		border: solid #f00 1px;
		width: 25%;
		height: 25%;
		text-align: center;
		position: absolute;
		top: 25%;
		left: 30%;
	}
	.clear{
		clear: both;
	}
	.clearleft{
		clear: left;
	}
	.clearright{
		clear: right;
	}

	.center {
		margin: 0 auto;
	}

	.right {
		margin: 0 0 0 auto;
		float: right;
	}

	.left {
		margin: auto 0 0 0;
		float: left;
	}
</style>

{{if data.ui_window == "main_menu"}}
	{{:helper.link(data.ui_win_data.first_metal, null, {"window" : "first_metal"}, null, "omegamat_link block left clearleft")}}
	{{:helper.link(data.ui_win_data.first_metal, null, {"window" : "second_metal"}, null, "omegamat_link block right clearright")}}<br><br><br>
	{{:helper.link('alloing_schemesl', null, {"window" : "alloing_schemes"}, null, "omegamat_link block left clearleft")}}
	{{:helper.link('approximate_result', null, {"window" : "approximate_result"}, null, "omegamat_link block right clearright")}}<br><br><br>
	{{:helper.link('Additives', null, {"window" : "additives"}, null, "omegamat_link block small_size center clear")}}

{{else data.ui_window == "first_metal"}}
	first_metal

{{else data.ui_window == "second_metal"}}
	second_metal

{{else data.ui_window == "alloing_schemes"}}
	alloing_schemes

{{else data.ui_window == "additives"}}
	additives

{{else data.ui_window == "approximate_result"}}
	approximate_result

{{else}}
	<div class="code_error_msg block">TEMPLATE ERROR</div>
{{/if}}
